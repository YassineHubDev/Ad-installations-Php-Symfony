{% trans_default_domain 'FOSUserBundle' %}


{% block fos_user_content %}
 
     
       
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        
<form class="text-center1 border border-dark p-5">  
   
    <fieldset class="form-group">
       <legend class="col-form-label">Vous Ãªtes :</legend>
          
          
           <div id="app_user_registration_roles" >
               <div class="form-check form-check-inline" >        
                   <input  
                   id="app_user_registration_roles_0" 
                   name="app_user_registration[roles][]" 
                   class="form-check-input" 
                   value="ROLE_MAGASIN" 
                   type="radio" 
                   onclick="afficher()"
                   checked/>
                   <label class="form-check-label" for="app_user_registration_roles_0">Un magasin</label>
                </div>
                         
                <div class="form-check form-check-inline" >        
                   <input 
                   id="app_user_registration_roles_1" 
                   name="app_user_registration[roles][]" 
                   class="form-check-input" 
                   value="ROLE_CLIENT" 
                   type="radio" 
                   onclick="effacer()"
                   >
                    <label class="form-check-label" for="app_user_registration_roles_1">Un particulier</label>
                </div>
            </div>
    </fieldset>
        

        <div class="form-row">
            <div class="col">
            
            {{ form_row(form.username, {'label' : false})}}
            {{ form_widget(form.username) }}
            </div>
            
         
            <div class="col">
                <p>{{ form_widget(form.raisonSociale) }}</p>
            </div>
        </div>

        <div class="form-row">
            <div class="col">
            {{ form_row(form.ville, {'label' : false})}}
            {{ form_widget(form.ville) }}
            </div>

            <div class="col">    
            {{ form_row(form.email, { 'attr': {'placeholder': "e-mail" }}) }}
            {{ form_widget(form.email) }}
            </div>
        </div>
       
        <div class="form-row">
            <div class="col">
            {{ form_row(form.plainPassword.first, {'label' : false}) }}
            {{ form_widget(form.plainPassword.first) }}
            </div>
            <div class="col">
            {{ form_row(form.plainPassword.second, {'label' : false}) }}
            {{ form_widget(form.plainPassword.second) }}
            </div>
        </div>
          
    {{ form_widget(form) }}
        <input type="submit" class="btn btn-success" value="{{ 'registration.submit'|trans }}" />    
    {{ form_end(form) }}


{% endblock %}
