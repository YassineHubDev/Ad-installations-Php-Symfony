<!-- Default form login -->
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

<!--    <p class="h4 mb-4">Connectez-vous</p>-->
<div id="page_login">
    <!-- Email -->
    <div>
        <label for="username" value="{{ 'security.login.username'|trans }}"></label>
        <input class="form-control mb-4" type="email" id="username" name="_username" placeholder="E-mail" required="required" autocomplete="username" value="{{ last_username }}">
    </div>
    
   
    <!-- Password -->
    <div>
        <label for="password" value="{{ 'security.login.password'|trans }}"></label>
        <input type="password" id="defaultLoginFormPassword" class="form-control mb-4" name="_password" required="required" autocomplete="current-password" placeholder="Mot de passe">
    </div>

    <div class="d-flex justify-content-around">
        <div>
            <!-- Remember me -->
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember" value="on" name="remember_me">
                <label class="custom-control-label" for="defaultLoginFormRemember" value="{{ 'security.login.remember_me'|trans }}">Se souvenir de moi </label>
            </div>
        </div>
        
        <div>
            <!-- Forgot password -->
            <a href="{{ path('fos_user_resetting_request') }}">MDP oubli√© ?</a>
        </div>
    </div>

    <!-- Sign in button -->
    <button class="btn btn-info btn-block my-4" type="submit" value="{{ 'security.login.submit'|trans }}">Se connecter</button>

    <!-- Register -->
    <p>Vous n'avez pas de compte ?
        <a href="{{ path('fos_user_registration_register') }}">Inscrivez-vous</a>
    </p>
</div>
</form>

</section>

